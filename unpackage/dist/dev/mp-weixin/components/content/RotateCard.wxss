.box {
  position: relative;
  -webkit-perspective: 90vw;
          perspective: 90vw;
  -webkit-transform-style: preserve-3d;
          transform-style: preserve-3d;
}
.box .card {
  height: 160px;
  width: 76vw;
  border-radius: 20rpx;
  -webkit-transform: translateX(0px) rotateX(-2deg) rotateY(28deg);
          transform: translateX(0px) rotateX(-2deg) rotateY(28deg);
  opacity: 0.9;
}
.box .card .tips-content {
  width: 80%;
  height: 74%;
}
.box::before {
  content: '';
  height: 160px;
  width: 76vw;
  border-radius: 20rpx;
  position: absolute;
  margin-top: -2px;
  margin-left: -2px;
  border: 2px solid #000;
  -webkit-transform: translateX(-30px) rotateY(-36deg) rotateX(15deg) scale(1.03);
          transform: translateX(-30px) rotateY(-36deg) rotateX(15deg) scale(1.03);
}
.box:hover > view,
.box:hover::before {
  -webkit-transform: none;
          transform: none;
}
.box > view,
.box::before {
  transition: .3s;
}

