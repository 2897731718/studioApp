.tab-box {
  width: 96vw;
  height: 60px;
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(114, 114, 114, 0.5);
}
.tab-box .tab {
  width: 60px;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tab-box .tab .isSelected {
  color: #78BB7B;
}
.tab-box .tab > view {
  font-size: 30px;
  color: #C4E1C5;
}
.tab-box .middle {
  position: relative;
  background-color: #C4E1C5;
  border-radius: 50%;
  border: 10px solid #e5e5e5;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  transition: 0.3s;
}
.tab-box .middle .add {
  position: absolute;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: 0.3s;
  opacity: 0;
  box-shadow: 0 0 20px rgba(114, 114, 114, 0.5);
}
.tab-box .middle .add > view {
  font-size: 14px;
  color: #686868;
  transition: 0.3s;
}
.tab-box .middle .add:hover {
  background-color: #78BB7B;
}
.tab-box .middle .add:hover > view {
  color: #fff;
}
.tab-box .middle::after {
  position: absolute;
  content: '';
  width: 50%;
  height: 3px;
  border-radius: 3px;
  background-color: #fff;
  transition: 0.3s;
}
.tab-box .middle::before {
  position: absolute;
  content: '';
  width: 50%;
  height: 3px;
  border-radius: 3px;
  background-color: #fff;
  transition: 0.3s;
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
}
.tab-box .open {
  background-color: #78BB7B;
}
.tab-box .open::after {
  -webkit-transform: rotate(135deg);
          transform: rotate(135deg);
}
.tab-box .open::before {
  -webkit-transform: rotate(225deg);
          transform: rotate(225deg);
}
.tab-box .open .add {
  opacity: 1;
  -webkit-transform: rotate(var(--angle)) translateY(-60px);
          transform: rotate(var(--angle)) translateY(-60px);
}
.tab-box .open .add > view {
  -webkit-transform: rotate(calc(0deg - var(--angle)));
          transform: rotate(calc(0deg - var(--angle)));
}
