.cube {
  width: 40px;
  height: 40px;
  -webkit-transform-style: preserve-3d;
          transform-style: preserve-3d;
  -webkit-animation: rotate-cube 10s ease-in-out infinite;
          animation: rotate-cube 10s ease-in-out infinite;
}
.cube ._img {
  width: 40px;
  height: 40px;
  border-radius: 20%;
  background-size: cover;
  background-position: center center;
  opacity: 0.9;
  position: absolute;
  box-shadow: inset 0 0 4px 2px rgba(106, 106, 106, 0.4);
}
.cube .img1 {
  -webkit-transform: rotateY(0deg) translateZ(20px);
          transform: rotateY(0deg) translateZ(20px);
}
.cube .img2 {
  -webkit-transform: rotateY(90deg) translateZ(20px);
          transform: rotateY(90deg) translateZ(20px);
}
.cube .img3 {
  -webkit-transform: rotateY(-90deg) translateZ(20px);
          transform: rotateY(-90deg) translateZ(20px);
}
.cube .img4 {
  -webkit-transform: rotateX(90deg) translateZ(20px);
          transform: rotateX(90deg) translateZ(20px);
}
.cube .img5 {
  -webkit-transform: rotateX(-90deg) translateZ(20px);
          transform: rotateX(-90deg) translateZ(20px);
}
.cube .img6 {
  -webkit-transform: rotateY(180deg) translateZ(0px);
          transform: rotateY(180deg) translateZ(0px);
}
@-webkit-keyframes rotate-cube {
0% {
    -webkit-transform: rotateX(0deg) rotateY(0deg);
            transform: rotateX(0deg) rotateY(0deg);
}
20% {
    /* 右边图片 */
    -webkit-transform: rotateY(-90deg);
            transform: rotateY(-90deg);
}
40% {
    /* 上 */
    -webkit-transform: rotateX(-90deg);
            transform: rotateX(-90deg);
}
60% {
    /* 左 */
    -webkit-transform: rotateY(90deg);
            transform: rotateY(90deg);
}
80% {
    /* 下 */
    -webkit-transform: rotateX(90deg);
            transform: rotateX(90deg);
}
100% {
    -webkit-transform: rotateX(0deg) rotateY(0deg);
            transform: rotateX(0deg) rotateY(0deg);
}
}
@keyframes rotate-cube {
