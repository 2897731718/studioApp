.you-page {
  position: relative;
}
.you-page .top-box {
  width: 100vw;
  height: 400rpx;
  border-radius: 0 0 20rpx 20rpx;
  position: absolute;
  top: 0;
}
.you-page .top-box .side-bar {
  width: 180rpx;
  height: 360rpx;
}
.you-page .top-box .side-bar .btn {
  font-size: 14px;
}
.you-page .top-box .side-bar .isSelect {
  background-color: #78BB7B;
  color: #FFFFFF;
  border-radius: 20rpx;
}
.you-page .top-box .side-bar .isSelect text {
  -webkit-transform: scale(1.1);
          transform: scale(1.1);
  transition: 0.4s;
}
.you-page .top-box .content-box {
  width: 64vw;
  height: 360rpx;
  padding: 20rpx;
  transition: 0.5s;
}
.you-page .top-box .content-box .instroduce-content {
  width: 94%;
  min-height: 80%;
  word-wrap: word-break;
  word-break: break-all;
}
.you-page .scroll-view {
  width: 100vh;
  height: calc(100vh - 530rpx);
  position: absolute;
  top: 400rpx;
  margin-bottom: 20rpx;
}
.you-page .scroll-view .content-box {
  width: 100vw;
  height: 100rpx;
  margin: 20rpx 0;
}
.you-page .scroll-view .content-box .member-box {
  width: 90%;
  height: inherit;
}
.you-page .scroll-view .content-box .member-box .you-btn {
  width: 120rpx;
  height: 50rpx;
  font-size: 14px;
  background-color: #e74c3c;
}
.you-page .slider-box {
  width: 100vw;
  height: 100rpx;
  position: fixed;
  bottom: 0;
}
.you-page .slider-box .slider {
  height: 80rpx;
}
.you-page .you-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 20;
}
.you-page .you-mask .member-page {
  width: 70vw;
  min-height: 660rpx;
  height: auto;
  position: relative;
}
.you-page .you-mask .member-page text:only-of-type {
  position: absolute;
  top: 20rpx;
  right: 26rpx;
  font-size: 20px;
}
.you-page .you-mask .member-page .box-in {
  width: 92%;
  height: 80rpx;
  font-size: 14px;
  position: relative;
}
.you-page .you-mask .member-page .box-in picker,
.you-page .you-mask .member-page .box-in input {
  position: absolute;
  right: 40rpx;
}
.you-page .you-mask .member-page .box-in input {
  text-align: right;
  width: 420rpx;
  color: #606266;
}
.you-page .you-mask .member-page .box-in .fa-angle-right {
  position: absolute;
  right: 20rpx;
}
.you-page .you-mask .you-btn {
  width: 80%;
  height: 76rpx;
}
.you-page .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}
.you-page .mask .prompt-box {
  width: 80%;
  height: 300rpx;
  font-size: 18px;
}
.you-page .mask .prompt-box .btn-box .you-btn {
  width: 220rpx;
  height: 80rpx;
}
.you-page .fixed-box {
  width: 100vw;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  z-index: 10;
}
.you-page .fixed-box .delete {
  width: 40%;
  height: 60%;
}
.you-page .fixed-box .add {
  width: 40%;
  height: 60%;
}

