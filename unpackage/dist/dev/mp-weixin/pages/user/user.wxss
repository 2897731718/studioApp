.you-page .information-box {
  width: 94vw;
  height: 200rpx;
  position: relative;
}
.you-page .information-box image {
  border: 4rpx solid #ffffff;
  height: 140rpx;
  width: 140rpx;
}
.you-page .information-box .right-box {
  position: absolute;
  right: 0rpx;
  height: 40rpx;
  width: 160rpx;
  font-weight: 200;
}
.you-page .number-box {
  width: 100vw;
  height: 100rpx;
}
.you-page .number-box .item-box {
  height: inherit;
}
.you-page .menu-list {
  width: 100vw;
}
.you-page .menu-list .box-in {
  width: 94vw;
  height: 100rpx;
  font-size: 14px;
  border-radius: 10rpx;
  position: relative;
}
.you-page .menu-list .box-in .fa-angle-right {
  position: absolute;
  right: 30rpx;
}
.you-page .menu-list .box-in:active {
  background-color: #F1F2F6;
}
.you-page .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}
.you-page .mask .prompt-box {
  width: 80%;
  height: 300rpx;
  font-size: 18px;
}
.you-page .mask .prompt-box .btn-box .you-btn {
  width: 220rpx;
  height: 80rpx;
}

