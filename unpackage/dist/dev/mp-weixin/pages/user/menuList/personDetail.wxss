.top-return {
  position: fixed;
  top: 0;
  z-index: 999;
}
.head-tab-show {
  width: 100vw;
  height: 100rpx;
  z-index: 999;
  position: absolute;
}
.head-tab-show .tab-item {
  height: 100rpx;
  position: relative;
}
.head-tab-show .activeTab {
  color: #78BB7B;
  -webkit-animation: click 1.3s;
          animation: click 1.3s;
}
.head-tab-show .activeTab::after {
  content: '';
  width: 80rpx;
  height: 10rpx;
  border-radius: 10rpx;
  background-color: #78BB7B;
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  top: 90rpx;
}
@-webkit-keyframes click {
from {
    opacity: 0;
}
to {
    opacity: 1;
}
}
@keyframes click {
from {
    opacity: 0;
}
to {
    opacity: 1;
}
}
