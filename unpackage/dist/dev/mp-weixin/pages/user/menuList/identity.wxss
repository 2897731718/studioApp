.you-page .title {
  margin: 20rpx;
  font-weight: 300;
  font-size: 12px;
}
.you-page .box-in {
  width: 100vw;
  height: 80rpx;
  font-size: 12px;
  position: relative;
}
.you-page .box-in picker,
.you-page .box-in input {
  position: absolute;
  right: 40rpx;
}
.you-page .box-in input {
  text-align: right;
  width: 420rpx;
  color: #606266;
}
.you-page .box-in .fa-angle-right {
  position: absolute;
  right: 20rpx;
}
.you-page .identity-box {
  width: 100vw;
  min-height: 100rpx;
  padding: 20rpx;
}
.you-page .identity-box .add-btn {
  width: 98%;
  height: 80rpx;
  border: solid 2rpx #333333;
}
.you-page .identity-box .picture-box {
  width: 80%;
  height: 240rpx;
}
.you-page .identity-box .picture-box image {
  height: 100%;
  width: 100%;
}
.you-page .content-box {
  padding: 20rpx;
  width: 100vw;
  height: 160rpx;
}
.you-page .btn-box {
  width: 100vw;
}
.you-page .btn-box .you-btn {
  width: 90%;
  height: 80rpx;
}

