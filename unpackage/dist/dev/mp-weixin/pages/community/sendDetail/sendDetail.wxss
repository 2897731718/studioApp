.you-page .box-in {
  width: 100vw;
  height: 80rpx;
  font-size: 14px;
  position: relative;
  padding: 0 20rpx;
}
.you-page .box-in input {
  position: absolute;
  right: 80rpx;
}
.you-page .box-in input {
  text-align: right;
  width: 420rpx;
  color: #606266;
}
.you-page .box-in .fa-angle-right {
  position: absolute;
  right: 20rpx;
}
.you-page .content-box {
  width: 100vw;
  padding: 20rpx;
  min-height: 100rpx;
}
.you-page .state-detail {
  width: 100vw;
  min-height: 100rpx;
  height: auto;
}
.you-page .state-detail .remind {
  width: 92%;
  word-wrap: word-break;
  word-break: break-all;
}
.you-page .state-detail .photo-box {
  width: 100vw;
  min-height: 210rpx;
  height: auto;
  place-items: center;
}
.you-page .state-detail .photo-box .img-box {
  height: 200rpx;
  width: 200rpx;
  padding: 20rpx;
  position: relative;
}
.you-page .state-detail .photo-box .img-box image {
  width: 100%;
  height: 100%;
}
.you-page .state-detail .photo-box .img-box .delete-btn {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 50%;
  right: 50%;
  -webkit-transform: translate(50%, -50%);
          transform: translate(50%, -50%);
  background-color: rgba(0, 0, 0, 0.3);
}
.you-page .state-detail .photo-box .add-box {
  width: 200rpx;
  height: 200rpx;
  padding: 20rpx;
}
.you-page .state-detail .photo-box .add-box .add {
  font-size: 60px;
}
.you-page .link-box {
  padding: 20rpx;
  word-wrap: word-break;
  word-break: break-all;
}
.you-page .link-box .clipboard-btn {
  width: 80rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  padding: 4rpx 0;
}
.you-page .btn-box {
  width: 100vw;
  height: 80rpx;
}
.you-page .btn-box .you-btn {
  width: 200rpx;
  height: 80rpx;
}
.you-page .cu-bar {
  padding: 20rpx 20rpx 20rpx 40rpx;
  height: 160rpx;
}
.you-page .cu-bar .top-box {
  width: 94%;
}
.you-page .cu-bar .top-box .fa-times {
  font-size: 24px;
}
.you-page .cu-bar .solid-bottom {
  padding: 0 20rpx;
  width: 90%;
  height: 30rpx;
}
.you-page .bottom-fixed {
  width: 100vw;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
}

